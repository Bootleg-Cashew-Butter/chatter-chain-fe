@import '../../theme/index.styl'

.element
  background-color: #fafafa
  padding: 40px
  border-top: 1px solid #f0f0f0
  border-bottom: 1px solid #f0f0f0
  display: flex
  justify-content: center
  position: relative

.ccButton
  font-size: 16px
  padding: 8px 16px
  border: 0
  background: $colorAccent
  color: white
  border-radius: 3px
  box-shadow: 0px 2px 4px -2px rgba(0,0,0,0.3)
  cursor: pointer

  &:hover
    background: $colorAccent + 10%

.copyLinkButtonWrap
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  text-align: center

.copyLinkButton
  border: 0
  background: white
  border: 1px solid #f0f0f0
  border-radius: 3px 3px 0 0
  border-bottom: 0
  padding: 4px 12px
  cursor: pointer

.link
  color: $colorAccent
  text-decoration: none
  border-bottom: 1px dashed $colorAccent

.transitionEnter
  opacity: 0.01

.transitionEnter.transitionEnterActive
  opacity: 1
  transition: all 250ms ease

.transitionLeave
  opacity: 1

.transitionLeave.transitionLeaveActive
  transition: all 250ms ease
  opacity: 0.01